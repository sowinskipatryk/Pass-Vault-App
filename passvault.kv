<LoginScreen>:
    Image:
        source: "passvault.png"
        pos_hint: {"center_x": 0.5, "center_y": 0.75}
    MDTextField:
        id: loginpass_field
        hint_text: "Enter the Master Key"
        color: (1, 1, 1, 1)
        size_hint: (0.6, 0.1)
        pos_hint: {"center_x": 0.5, "center_y": 0.43}
        font_size: 22
        multiline: False
        password: True
    MDIconButton:
        id: eye_icon
        icon: 'eye-off'
        opacity: 1
        on_press: root.toggle_eye()
        pos_hint: {"center_x": 0.77, "center_y": 0.44}
        canvas.after:
            Color:
                rgba: [0.6, 0.6, 0.6, 1]
    MDRaisedButton:
        text: 'LOGIN'
        pos_hint: {"center_x": 0.5, "center_y": 0.15}
        on_release: root.validate_pass()
        font_size: 17
    MDLabel:
        id: info_label
        text: ""
        halign: "center"
        font_size: 17
        pos_hint: {'center_y': .3, 'center_x': .5}
        size_hint: (0.5, 0.15)
        theme_text_color: "Secondary"
<PassCheckScreen>:
    Image:
        source: "passvault.png"
        pos_hint: {"center_x": 0.5, "center_y": 0.75}
    MDTextField:
        id: service_field
        hint_text: "Enter a service name"
        size_hint: (0.6, 0.11)
        pos_hint: {"center_x": 0.5, "center_y": 0.43}
        font_size: 22
        multiline: False
    MDTextField:
        id: password_field
        font_size: 22
        size_hint: (0.6, 0.11)
        pos_hint: {"center_x": 0.5, "center_y": 0.13}
        theme_text_color: "Primary"
        font_style: "H5"
        multiline: False
        password: False
    MDIconButton:
        id: pass_copy
        icon: 'content-copy'
        on_press: root.clipboard_copy()
        pos_hint: {"center_x": 0.77, "center_y": 0.14}
        canvas.before:
            Color:
                rgba: [0.161, 0.439, 0.796, 0.5]
    MDIconButton:
        id: eye_pass
        icon: 'eye-off'
        on_press: root.toggle_eye()
        pos_hint: {"center_x": 0.69, "center_y": 0.14}
        canvas.before:
            Color:
                rgba: [0.161, 0.439, 0.796, 0.5]
    MDLabel:
        id: info_service
        text: ""
        font_size: 17
        pos_hint: {'center_y': .35, 'center_x': .5}
        size_hint: (0.5, 0.15)
        halign: 'center'
        theme_text_color: "Secondary"
    MDRaisedButton:
        text: 'CHECK'
        pos_hint: {'center_y': .25, 'center_x': .5}
        on_release: root.validate_service()
        font_size: 17
